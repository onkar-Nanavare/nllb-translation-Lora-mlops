# Application Settings
APP_NAME=NLLB Translation Service
APP_VERSION=1.0.0
DEBUG=false

# API Configuration
API_V1_PREFIX=/api/v1
HOST=0.0.0.0
PORT=8000

# Model Configuration
MODEL_NAME=facebook/nllb-200-distilled-600M
CUSTOM_MODEL_PATH=./models/lora-adapters/nllb-medical  # Uncomment to use custom fine-tuned model
MODEL_CACHE_DIR=./models/cache
USE_GPU=true
USE_HALF_PRECISION=true
MAX_LENGTH=512

# Performance Settings
NUM_WORKERS=4
WORKER_CLASS=uvicorn.workers.UvicornWorker
TIMEOUT=120
RATE_LIMIT_PER_MINUTE=60
REQUEST_TIMEOUT=30

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Training Configuration
TRAINING_OUTPUT_DIR=./models/custom-nllb
TRAINING_BATCH_SIZE=8
TRAINING_EPOCHS=3
LEARNING_RATE=2e-5
